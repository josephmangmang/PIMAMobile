<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DeleteButton" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">@color/deleteButtonRed</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NavigationDrawer">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>
    </style>

    <style name="AppTheme.RobotoText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#6e6e6e</item>
    </style>

    <style name="AppTheme.RobotoTextMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#6e6e6e</item>
    </style>

    <style name="AppTheme.RobotoTextLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#6e6e6e</item>
    </style>

    <style name="AppTheme.RobotoTextHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#6e6e6e</item>
    </style>
</resources>
