<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.pimamobile.pima.utils.RobotoTextView
            android:id="@+id/expandable_item_name"
            style="@style/AppTheme.RobotoTextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            app:typeface="roboto_regular" />

        <com.pimamobile.pima.utils.RobotoTextView
            android:id="@+id/expandable_item_quantity"
            style="@style/AppTheme.RobotoTextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/discount_icon_margin"
            android:layout_marginRight="@dimen/discount_icon_margin"
            app:typeface="roboto_light_italic" />

        <com.pimamobile.pima.utils.RobotoTextView
            android:id="@+id/expandable_item_total_amount"
            style="@style/AppTheme.RobotoTextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="roboto_regular" />
    </LinearLayout>

    <com.pimamobile.pima.utils.RobotoTextView
        android:id="@+id/expandable_item_note"
        style="@style/AppTheme.RobotoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typeface="roboto_italic" />
</LinearLayout>